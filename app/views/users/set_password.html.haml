.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), users_path
      %li.active= link_to t("web-app-theme.new", :default => "Set password"), new_user_path
  .content
    %h2.title Set password
    .inner
      - form_for :user, :url => set_password_path, :html => { :class => :form } do |f|
        .group
          = f.label :email, "Email: ", :class => :label, :style => "display:inline"
          = @user.email

        .group
          = label :password, "Password: ", :class => :label, :style => "display:inline"
          = password_field_tag :password
          
        .group.navform.wat-cf
          %button.button{:type => 'submit'}
            = image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
            = t("web-app-theme.save", :default => "Save")
          = link_to raw("#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}"), users_path, :class => "button"

