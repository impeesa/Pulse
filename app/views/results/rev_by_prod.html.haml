.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "Rev by Div", rev_by_div_result_path
      %li.active= link_to "Rev by Prod", rev_by_prod_result_path
      %li.last= link_to "Balance Sheet", balance_sheet_result_path
  .content
    .options
      Display: 
      = select_tag 'product-chart', options_for_select([['All products', 'all']] + @items.map { |i| [i, i] })
    - @charts.each do |chart|
      = chart_placeholder chart.name, @total_charts
