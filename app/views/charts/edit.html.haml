.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), charts_path
      %li.active= link_to t("web-app-theme.edit", :default => "Edit"), edit_chart_path
  .content
    :plain
      Editing #{@chart.name}
    .inner
      - form_for @chart, :url => chart_path(@chart), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

